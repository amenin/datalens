<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Dataset Finder</title>

    <link rel="stylesheet" type="text/css" href="/mgnlp/css/main.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Include the noUiSlider CSS and JS libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.7.0/nouislider.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.7.0/nouislider.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.16.0/d3.min.js" integrity="sha512-FHsFVKQ/T1KWJDGSbrUhTJyS1ph3eRrxI228ND0EGaEp6v4a/vGwPWd3Dtd/+9cI7ccofZvl/wulICEurHN1pg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


    <script src="/mgnlp/js/filterpanel.js"></script>
    <script src="/mgnlp/js/dataviz.js"></script>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Filters Panel -->

            <div class="col-md-3">
                <div class="card" style="display: flex; flex-direction: column; height: 90vh; gap: 10px;">

                    <!-- Top Card: Takes 90% of the height -->
                    <div class="card card-bottom" style="height: 30%; overflow-y: scroll;">
                        <div class="card-header">
                            Define the network 
                        </div>
                        <!-- Content for the top card -->
                        <div class="card-body d-flex align-items-center" style="gap: 10px;"  >
                            <div class="flex-grow-1">
                                <div class="form-group">
                                    <label for="source-select">Source Variable</label>
                                    <select class="form-control" id="source-select">
                                        <!-- Add source variable options here -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="target-select">Target Variable</label>
                                    <select class="form-control" id="target-select">
                                        <!-- Add target variable options here -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="link-select">Link Variable</label>
                                    <select class="form-control" id="link-select">
                                        <!-- Add link variable options here -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="link-select">Thematic Variable</label>
                                    <select class="form-control" id="theme-select">
                                        <!-- Add link variable options here -->
                                    </select>
                                </div>
                            </div>
                            <button type="button" class="btn btn-primary ml-3 align-self-stretch" id="btn-build-network">
                                <i class="fas fa-play"></i>
                            </button>
                            
                        </div>
                    </div>

                    <!-- Top Card: Takes 90% of the height -->
                    <div class="card card-top" style="height: 70%;">
                        <div class="card-header" >
                            Filter datasets by
                        </div>
                        <!-- Content for the top card -->
                        <div class="card-body" id="filters-container" style="overflow-y: scroll;" >
                            
                        </div>
                    </div>

                </div>
            </div>
            

            <!-- Visualization Panel -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header" id="viz-title">
                        Visualization
                    </div>
                    <div class="card-body">
                        <div class="dashboard">
                            <!-- Placeholder message -->
                            <div id="placeholder" class="placeholder-message hidden">
                                Please select at least one filter.
                            </div>
                            
                            <!-- Visualization content goes here -->
                            <mge-dashboard id="visualization-content"></mge-dashboard>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    

</body>



<script type="module">
    // console.log( <%- JSON.stringify(locals) %> )

    import '/mgnlp/node_modules/mgexplorer/dist/mgexplorer/mgexplorer.esm.js';

    let locals = <%- JSON.stringify(locals) %>;


    document.addEventListener('DOMContentLoaded', async () => {

        let savedFilters = window.sessionStorage.getItem('filters')

        const filterPanel = new FilterPanel(savedFilters)
        await filterPanel.set()

        const dataviz = new DataViz()
        await dataviz.init()


        document.querySelector("#btn-build-network").addEventListener('click', () => {
            let filters = { ...filterPanel.getSelectedFilters() }
            filters.source = document.querySelector('#source-select').value
            filters.target = document.querySelector('#target-select').value
            filters.link = document.querySelector("#link-select").value
            filters.theme = document.querySelector("#theme-select").value

            console.log(filters)

            if (filters.link === 'dataset' && (filters.source === 'dataset' || filters.target === 'dataset'))
                dataviz.togglePlaceholder(`<i class="fa-solid fa-triangle-exclamation alert-icon"></i><br>"Dataset" cannot be both node and link. Please modify your selection`)

            else if (Object.keys(filters).length > 0 && Object.values(filters).some(arr => arr.length > 0)) {
                dataviz.set(filters)
            }
        })
        
  })

 

    
</script>

</html>